@* 
    A version of <TruncatedText/> that does not add a tooltip if the text is truncated.
    Perfect for use in never-interactable areas like page titles.
*@

@if (Text is not null)
{
    @if (!IsTruncated)
    {
        @Text
    }
    else
    {
        @(TruncatedString + "...")
    }
}

@code {

    [Parameter]
    public required string? Text { get; set; }

    [Parameter]
    public required int MaxLength { get; set; }

    private bool IsTruncated => Text!.Length > MaxLength;

    private string TruncatedString => Text![..(MaxLength - 3)];
}